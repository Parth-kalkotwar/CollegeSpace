<body>
    <% if (msg != "") { %>
        <h1>You need to Login</h1><br />
        <a href="http://localhost:3000/auth/login">Login</a>
        <%} else { %>
           <div id="navbar">
                <a id="logo" href="/">CollegeSpace</a>
                <div id="navbar-right">
                  <a href="/profile/<%=id%>">Profile</a>
                  <a class = "active" href="/posts">Posts</a>
